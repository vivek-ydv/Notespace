{
    "version": 2,
    "builds": [
        {
            "src": "backend/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "build/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/.*",
            "dest": "backend/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "build/index.html"
        }
    ],
    "env": {
        "PORT": "5000"
    }
}